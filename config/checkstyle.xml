<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
        "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
        "https://checkstyle.org/dtds/configuration_1_3.dtd">
<module name="Checker">
    <property name="charset" value="UTF-8"/>
    <property name="severity" value="warning"/>
    <module name="TreeWalker">
        <!-- Enforce Javadoc for Classes -->
        <module name="JavadocType"/>

        <!-- Enforce Javadoc for Methods: Validates format and tags of existing Javadoc -->
        <module name="JavadocMethod"/>

        <!-- Enforce Javadoc for Methods: Checks that public methods have Javadoc -->
        <module name="MissingJavadocMethod"/>

        <!-- Optional: Check for Javadoc style -->
        <module name="JavadocStyle"/>

        <!--
            Naming rules: enforce a minimum identifier length similar to ESLint's `id-length`.
            The regular expression below allows either one of the accepted single-letter
            exceptions (e, E, i, j, k) OR identifiers with at least two characters.
            This applies to local variables, method parameters, fields, and catch parameters.
        -->
        <module name="LocalVariableName">
            <property name="format" value="^(?:[eEijk]|[A-Za-z][A-Za-z0-9_]{1,})$"/>
        </module>

        <module name="ParameterName">
            <property name="format" value="^(?:[eEijk]|[A-Za-z][A-Za-z0-9_]{1,})$"/>
        </module>

        <module name="FieldName">
            <property name="format" value="^(?:[eEijk]|[A-Za-z][A-Za-z0-9_]{1,})$"/>
        </module>

        <module name="CatchParameterName">
            <property name="format" value="^(?:[eEijk]|[A-Za-z][A-Za-z0-9_]{1,})$"/>
        </module>
    </module>
</module>
